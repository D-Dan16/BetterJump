<idea-plugin>
    <id>me.dirtydan16.BetterJump</id>

    <name>BetterJump</name>

    <vendor email="stav.gr8@gmail.com">Stav Gordeev</vendor>

    <description><![CDATA[
      <p><strong>BetterJump</strong><br/>
      An IntelliJ IDEA plugin for better in-file navigation.</p>

      <h2><a href="https://github.com/D-Dan16/BetterJump">Repo Link</a></h2>

      <p><strong>Overview</strong><br/>
      BetterJump introduces precise, customizable navigation shortcuts that make moving inside code files much faster.
      You can jump between blocks, words, or commas, and even select sections intelligently — without ever touching the mouse.</p>

      <p><strong>Default Keyboard Shortcuts</strong></p>

      <p><strong>Block Navigation</strong></p>
      <ul>
        <li><strong>Go to Next Block</strong> — Moves caret to the first non-whitespace character of the next {} block. <code>Shift + Ctrl + Alt + ]</code></li>
        <li><strong>Go to Previous Block</strong> — Moves caret to the first non-whitespace character of the previous {} block. <code>Shift + Ctrl + Alt + [</code></li>
        <li><strong>Go to Inner Block</strong> — Start of inner block content. <code>Shift + Alt + ]</code></li>
        <li><strong>Go to Outer Block</strong> — Start of outer block content. <code>Shift + Alt + [</code></li>
        <li><strong>Select Code Block</strong> — Selects code inside current {} block. <code>Shift + Ctrl + Alt + W</code></li>
      </ul>

      <p><strong>Comma Navigation</strong></p>
      <ul>
        <li><strong>Go To Next Comma</strong> — Moves caret to the next comma. <code>Ctrl + ,</code></li>
        <li><strong>Go To Previous Comma</strong> — Moves caret to the previous comma. <code>Ctrl + Shift + ,</code></li>
        <li><strong>Select Content To Next Comma</strong> — Selects text between commas to the right. <code>Ctrl + Alt + ,</code></li>
        <li><strong>Select Content To Previous Comma</strong> — Selects text between commas to the left. <code>Ctrl + Alt + Shift + ,</code></li>
      </ul>

      <p><strong>Horizontal / Word Navigation</strong></p>
      <ul>
        <li><strong>Jump Horizontally</strong> — Jumps caret by a preset number of characters. <code>Shift + Ctrl + Alt + X</code></li>
        <li><strong>Set Horizontal Jump Amount</strong> — Opens dialog to set jump size. <code>Shift + Ctrl + G</code> or <code>Shift + Ctrl + X</code></li>
        <li><strong>Invert Jump Horizontal Direction</strong> — Inverts left ↔ right. <code>Shift + Alt + X</code></li>
        <li><strong>Jump To Right (Word)</strong> — Jumps to next word start. <code>Ctrl + Shift + Alt + →</code></li>
        <li><strong>Jump To Left (Word)</strong> — Jumps to previous word start. <code>Ctrl + Shift + Alt + ←</code></li>
      </ul>

      <p><strong>Author</strong><br/>
      <strong>Stav Gordeev</strong><br/>
      Email: <a href="mailto:stav.gr8@gmail.com">stav.gr8@gmail.com</a></p>

    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <statusBarWidgetFactory implementation="me.dirtydan16.betterjump.actions.navigation.inside_a_file.CaretOffsetWidgetFactory"
                                id="CaretOffsetWidget"/>


        <applicationConfigurable
                id="me.dirtydan16.betterjump.settings"
                displayName="BetterJump"
                instance="me.dirtydan16.betterjump.settings.BetterJumpConfigurable"
                groupId="tools"/>
    </extensions>

    <actions>
        <group id="NavigationHorizontally">
            <action id="JumpHorizontal" class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.JumpHorizontal" text="Jump Horizontally"
                    description="Jump each caret by a specified character amount that has been preset via the Set And Jump Horizontally action.">
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt X"/>
            </action>
            <action id="SetAndJumpHorizontal"
                    class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.SetAndJumpHorizontal" text="Set Horizontal Jump Amount"
                    description="Jump each caret by a specified character amount in the menu dialog.">
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl G"/>
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl X"/>
            </action>
            <action id="InvertJumpHorizontalDirection"
                    class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.InvertJumpHorizontalDirection"
                    text="Invert Direction of Horizontal Jump"
                    description="Invert the direction of where you jump horizontally when you use the action Jump Horizontally (for Char jump only)">
                <keyboard-shortcut keymap="$default" first-keystroke="shift alt X"/>
            </action>
            <action
                id="WordJumpToRight"
                class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.JumpToRight"
                text="Jump To Right"
                description="Jump the caret to the start of the word that is ahead of the caret by an X amount.">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt RIGHT"/>
            </action>
            <action
                    id="WordJumpToLeft"
                    class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.JumpToLeft"
                    text="Jump To Right"
                    description="Jump the caret to the start of the word that is behind of the caret by an X amount.">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt LEFT"/>
            </action>
        </group>
        <group id="CommaActionsGroup">
            <action
                id="GoToNextComma"
                class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.comma.GoToNextComma"
                text="Go To Next Comma"
                description="Moves the caret to the next comma.">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl COMMA" />
            </action>
            <action
                id="GoToPrevComma"
                class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.comma.GoToPrevComma"
                text="Go To Previous Comma"
                description="Moves the caret to the previous comma.">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift COMMA" />
            </action>
            <action
                id="GoToNextCommaWithSelection"
                class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.comma.GoToNextCommaWithSelection"
                text="Select Content To Next Comma"
                description="Moves caret to the right of the right comma and selects the text that is inside 2 commas. upon multiple uses, switches to the next element instead.">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt COMMA" />
            </action>
            <action
                id="GoToPrevCommaWithSelection"
                class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.comma.GoToPrevCommaWithSelection"
                text="Select Content To Previous Comma"
                description="Moves caret to the left of the left comma and selects the text that is inside 2 commas. upon multiple uses, switches to the previous element instead.">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift COMMA" />
            </action>
        </group>
        <group id="JumpToMethodCall">
            <action id="JumpToNextMethodCall" class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.JumpToNextMethodCall"
                    text="Jump to Next Method Call"
                    description="Jump the caret to the start of the contents of the next method call">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl M"/>
            </action>
            <action id="JumpToPrevMethodCall" class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.JumpToPrevMethodCall"
                    text="Jump to Previous Method Call"
                    description="Jump the caret to the start of the contents of the prev method call">
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl M"/>
            </action>
        </group>
        <group id="GoToBlock">
            <action id="GoToNextBlock" class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.GoToNextBlock"
                    text="Go to Next Block"
                    description="Moves caret to the first non-whitespace character of the next block of code [ {} ], if there is one.">
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt CLOSE_BRACKET"/>
            </action>
            <action id="GoToPreviousBlock" class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.GoToPreviousBlock"
                    text="Go to Previous Block"
                    description="Moves caret to the first non-whitespace character of the previous block of code [ {} ], if there is one.">
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt OPEN_BRACKET"/>
            </action>
            <action id="GoToInnerBlock" class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.GoToInnerBlock"
                    text="Go to Inner Block"
                    description="Moves caret to the start of the content of an inner code block if possible [ {} ]">
                <keyboard-shortcut keymap="$default" first-keystroke="shift alt CLOSE_BRACKET"/>
            </action>
            <action id="GoToOuterBlock" class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.GoToOuterBlock"
                    text="Go to Outer Block"
                    description="Moves caret to the start of the content of an outer code block if possible [ {} ]">
                <keyboard-shortcut keymap="$default" first-keystroke="shift alt OPEN_BRACKET"/>
            </action>
            <action id="SelectBlockCaretIsIn" class="me.dirtydan16.betterjump.actions.navigation.inside_a_file.SelectBlockCaretIsIn"
                    text="Select Code Block"
                    description="Select the block of code the caret is in. This refers to what is inside curly braces, and curly braces only.">
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt W"/>
            </action>
        </group>
        <group id="MenuNav">
            <action id="NextNodeJumpDown" class="me.dirtydan16.betterjump.actions.navigation.between_files.NextNodeJumpDown" text="Next Node Jump Down"
                    description="Jump vertically down by an X amount in the Tree structures, such as the Project Window">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl DOWN"/>
            </action>
            <action id="NextNodeJumpUp" class="me.dirtydan16.betterjump.actions.navigation.between_files.NextNodeJumpUp" text="Next Node Jump Up"
                    description="Jump vertically up by an X amount in the Tree structures, such as the Project Window">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl UP"/>
            </action>
        </group>
    </actions>

</idea-plugin>